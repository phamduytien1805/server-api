{
  "name": "server-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install",
    "prettier": "prettier --write \"**/*.{js,jsx,ts}\"",
    "prettier:check": "prettier --check \"**/*.{js,jsx,ts}\"",
    "lint:check": "eslint --ignore-path .eslintignore \"**/*.{js,jsx,ts}\"",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "lint": "eslint --ignore-path .eslintignore '**/*.{js,jsx,ts}' --fix",
    "maintenance:delete-node-modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "maintenance:delete-dist": "find . -name '.dist' -type d -prune -exec rm -rf '{}' +"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts}": [
      "npm run lint"
    ]
  },
  "workspaces": [
    "libraries/*",
    "services/*"
  ],
  "keywords": [],
