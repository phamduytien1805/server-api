{
  "name": "server-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "PORT=3333 PRETTY_PRINT=false node -r tsconfig-paths/register .dist/index.js",
    "start:dev": "PORT=3333 PRETTY_PRINT=true nodemon -r tsconfig-paths/register index.ts",
    "test": "turbo run test --parallel",
    "prepare": "husky install",
    "prettier": "prettier --write \"**/*.{js,jsx,ts}\"",
    "prettier:check": "prettier --check \"**/*.{js,jsx,ts}\"",
    "lint:check": "eslint --ignore-path .eslintignore \"**/*.{js,jsx,ts}\"",
    "lint": "eslint --ignore-path .eslintignore '**/*.{js,jsx,ts}' --fix",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "migration:down:all": "db-migrate reset --config src/config/database.json -m src/migrations",
    "migration:down": "db-migrate down --config src/config/database.json -m src/migrations",
    "migration:up": "db-migrate up --config src/config/database.json -m src/migrations",
    "migration:create": "db-migrate create $name --config src/config/database.json --sql-file -m src/migrations"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts}": [
      "npm run lint"
    ]
  },
  "workspaces": [
    "src/*"
  ],
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.7",
    "@types/pg": "^8.10.2",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "eslint": "^8.18.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "nodemon": "^3.0.1",
    "pino-pretty": "^10.2.0",
    "prettier": "^2.8.7",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@fastify/cookie": "^9.0.4",
    "@fastify/cors": "^8.3.0",
    "@fastify/helmet": "^11.0.0",
    "db-migrate": "^0.11.14",
    "db-migrate-pg": "^1.5.2",
    "dotenv": "^16.3.1",
    "fastify": "^4.22.0",
    "fluent-json-schema": "^4.2.1",
    "fp-ts": "^2.16.1",
    "http-status-codes": "^2.2.0",
    "net": "^1.0.2",
    "os": "^0.1.2",
    "pg": "^8.11.3",
    "pino": "^8.16.0",
    "pino-pretty": "^10.2.0"
  }
}
